{% extends "layout.html.twig" %}
{% block title %}Home{% endblock %}
{% block content %}
	{% if job.companylogo is not empty %}
    	<img class='right' src='{{job.companylogo}}' />
    {% endif %}

    <h1>{{job.position}}</h1>
    <h2>{{job.companyname}}</h2>
    <h3>Added {{job.dateadded_unixtime|date('M d')}}</h3>
    <hr>

    {{job.description|raw|nl2br}}

    <a href='{{job.applyurl}}' class='button'>Apply at {{job.sourcename}}</a>
{% endblock %}
